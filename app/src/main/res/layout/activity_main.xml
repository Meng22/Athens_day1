<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/athens"
            android:layout_height="match_parent"
            android:id="@+id/background" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:scaleType="fitXY"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.0"/>
    <EditText
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:background="@drawable/ic_solid_shape"
            android:digits="1234567890qwertyuiopasdfghjklzxcvbnm"
            android:ems="10"
            android:id="@+id/ed_name"
            android:hint="請輸入跑者姓名" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:layout_marginTop="220dp"
            app:layout_constraintTop_toTopOf="@+id/background" android:text="meng"/>
    <EditText
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:digits="1234567890qwertyuiopasdfghjklzxcvbnm"
            android:ems="10"
            android:background="@drawable/ic_solid_shape"
            android:id="@+id/ed_password"
            android:hint="請輸入密碼" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/ed_name" android:text="123"/>
    <Button
            android:text="LOG IN"
            android:layout_width="200dp"
            android:background="@drawable/ic_solid_rectangle"
            android:layout_height="wrap_content" android:id="@+id/btn_login"
            android:textColor="#ffffff" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:layout_marginBottom="150dp"
            app:layout_constraintBottom_toBottomOf="@+id/background"/>
    <Button
            android:text="REGISTER"
            android:layout_width="200dp"
            android:background="@drawable/ic_hollow_rectangle"
            android:layout_height="wrap_content" android:id="@+id/btn_register"
            android:textColor="#ffffff" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.502" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_login"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="120dp" app:srcCompat="@drawable/flag_athens" android:id="@+id/imageView"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <TextView
            android:text="雅典驛站"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:textSize="28sp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/ed_name"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>