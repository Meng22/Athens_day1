<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".api.MissionFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:padding="3dp" android:background="#f4f5f9">

        <TextView
                android:text="運送資訊"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView"
                android:textSize="25sp" android:textColor="#1d1e22" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="10dp" android:layout_marginStart="10dp" android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="@drawable/ic_information_shape"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="10dp" android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp" android:layout_margin="10dp"
                android:id="@+id/linearLayout"
                android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/textView">
            <ImageView
                    android:src="@drawable/demo_image"
                    android:layout_width="130dp"
                    android:layout_height="130dp" android:id="@+id/shipment_image" android:layout_marginRight="8dp"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_weight="1">
                <TextView
                        android:text="怪獸粉袋 Max"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/shipment_name" android:textColor="#1d1e22"
                        android:textSize="24sp"/>
                <TextView
                        android:text="目的地：阿卡迪亞"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/shipment_destination"
                        android:layout_marginTop="8dp" android:textSize="18sp"/>
                <TextView
                        android:text="重量：500g"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/shipment_weight"
                        android:layout_marginTop="4dp" android:textSize="18sp"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:text="收入"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView8" android:layout_weight="1"
                            android:textSize="20sp" android:layout_marginTop="4dp" android:textColor="#1d1e22"
                            android:layout_gravity="center"/>
                    <TextView
                            android:text="$1200"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/shopment_price"
                            android:layout_weight="5"
                            android:textSize="30sp" android:textColor="#e7a634"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <ImageView
                android:src="@drawable/map"
                android:layout_width="match_parent"
                android:layout_height="350dp" android:id="@+id/imageView5"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="10dp" android:layout_marginRight="10dp" android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" android:scaleType="centerCrop"/>
        <Button
                android:text="         配送完成         "
                android:layout_width="200dp"
                android:background="@drawable/ic_shipment_button"
                android:layout_height="wrap_content" android:id="@+id/button2"
                android:textSize="18sp" android:textColor="#EEFFFFFF" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="8dp" android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>