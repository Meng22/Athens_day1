<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".goods.ShopFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:padding="10dp">

        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                tools:listitem="@layout/goods_itemview"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:id="@+id/rv_station"
                app:layout_constraintTop_toBottomOf="@id/linearlayout"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/linearlayout"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="9dp" android:layout_marginRight="9dp"
                app:layout_constraintTop_toTopOf="parent">
            <ImageView
                    android:src="@drawable/flag_athens"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp" android:id="@+id/btn_athens" android:layout_weight="1"/>
            <ImageView
                    android:src="@drawable/flag_phokis"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp" android:id="@+id/btn_phokis" android:layout_weight="1"/>
            <ImageView
                    android:src="@drawable/flag_arkadia"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp" android:id="@+id/btn_arcadia" android:layout_weight="1"/>
            <ImageView
                    android:src="@drawable/flag_sparta"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp" android:id="@+id/btn_sparta" android:layout_weight="1"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>